<% layout('layouts/boilerplate')%>
<div class="row">
  <h1 class="text-center">Edit Hiking Trail</h1>
  <div class="col-6 offset-3">
    <form
      action="/hikingtrails/<%=hikingtrail._id%>?_method=PUT"
      method="POST"
      novalidate
      class="validated-form"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="hikingtrail[title]"
          value="<%=hikingtrail.title %>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="hikingtrail[location]"
          value="<%=hikingtrail.location %>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image Url</label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="hikingtrail[image]"
          value="<%=hikingtrail.image %>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Expense</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            class="form-control"
            id="price"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            name="hikingtrail[price]"
            value="<%=hikingtrail.price %>"
            required
          />\
          <div class="valid-feedback">Looks good!</div>
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="hikingtrail[description]"
          required
        >
<%= hikingtrail.description%></textarea
        >
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <button class="btn btn-info">Update Hiking Trail</button>
      </div>
    </form>
    <a href="/hikingtrails/<%= hikingtrail._id%>">Back To Hiking Trail</a>
  </div>
</div>
